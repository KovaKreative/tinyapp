<%- include('partials/_header', { title: "TinyApp" }) %>
  <main style="margin: 1em;">
    <div class="container">
      <h3>My URLs</h3>

      <% if(!Object.keys(urls).length) { %>

        <div class="d-flex justify-content-center">
          <p class="lead mt-3">You do not have any small URLs. <a href="/urls/new">Create one now!</a></p>
          
        </div>

      <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Short URL ID</th>
              <th scope="col">Long URL</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let id in urls) { %>
              <tr>
                <td>
                  <%= id %>
                </td>
                <td>
                  <%= urls[id].longURL %>
                </td>
                <td>
                  <!-- <form method="GET" action="/urls/<%= id %>"> -->
                  <a href="/urls/<%= id %>" class="btn btn-outline-primary">Edit</a>
                  <!-- </form> -->
                </td>
                <td>
                  <form method="POST" action="/urls/delete/<%= id %>">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      <% } %>
    </div>
  </main>
  <%- include('partials/_footer') %>