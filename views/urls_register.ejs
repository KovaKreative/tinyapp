<%- include('partials/_header', {title: "New URL - TinyApp" }) %>
  <main class="container border d-flex justify-content-center mt-3 p-5">
    <div>
      <h3>Register Your Account</h3>
      <form class="form" action="/register" method="POST">
        <div class="form-group container justify-content-center mb-2">
          <div class="row-12 mt-3">
            <label class="col form-label" for="email">Email</label>
            <input class="form-control col" type="email" name="email" autofill="false" placeholder="name@domain.tld"/>
          </div>
          <div class="row-12 mt-3">
            <label class="col form-label" for="password">Password</label>
            <input class="form-control col" type="password" autofill="false" name="password"/>
          </div>
          <div class="row-12 mt-3">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </main>
  <%- include('partials/_footer') %>